# ============================================
# AI Trading PoC - Environment Variables
# ============================================

# Alpha Vantage API Configuration
# 無料APIキーを https://www.alphavantage.co/api/me で取得
ALPHA_VANTAGE_KEY=demo

# API Endpoints
API_BASE_URL=https://www.alphavantage.co/query

# Model Configuration
# 推論実行間隔（秒）
MODEL_UPDATE_INTERVAL=3600

# ネットワークアクセスの際のタイムアウト（秒）
API_TIMEOUT=30

# ポート設定
BACKEND_PORT=5000
FRONTEND_PORT=5173

# Python環境パス (バックエンド用)
PYTHON_PATH=python

# ロギングレベル
LOG_LEVEL=info

# データ保存パス
DATA_DIR=./ai/data
MODEL_DIR=./ai/models

# データ取得設定
# 取得する過去データ期間（日数）
DATA_LOOKBACK_DAYS=30

# トレーニングデータ期間（日数）
TRAIN_DAYS=7

# テストデータ期間（日数）
TEST_DAYS=1

